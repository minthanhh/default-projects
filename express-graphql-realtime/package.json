{
    "name": "express-graphql-realtime-chat",
    "version": "1.0.0",
    "description": "",
    "main": "src/app.ts",
    "scripts": {
        "start": "nodemon",
        "start:prod": "npm run build:swc && node dist/app.js",
        "codegen": "graphql-codegen --config codegen.yaml",
        "build": "rimraf dist && tsc && node dist/app.js",
        "build:swc": "rimraf dist && swc src -d dist",
        "migration:generate": "npx typeorm-ts-node-commonjs -d src/shared/database/data-souce.ts migration:generate src/shared/database/migrations/default",
        "migration:run": "npx typeorm-ts-node-commonjs -d src/shared/database/data-souce.ts migration:run",
        "docker:run": "docker run --rm --name graphql-server --env=POSTGRES_PASSWORD=pass --env=POSTGRES_USER=user --env=POSTGRES_DB=graphql-db --env=POSTGRES_HOST=localhost --env=POSTGRES_PORT=5433 --env=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/lib/postgresql/16/bin --env=GOSU_VERSION=1.16 --env=LANG=en_US.utf8 --env=PG_MAJOR=16 --env=PG_VERSION=16.0-1.pgdg120+1 --env=PGDATA=/var/lib/postgresql/data --volume=/var/lib/postgresql/data -p 5432:5432 --runtime=runc -d postgres:latest"
    },
    "author": "Ho Minh Thanh",
    "license": "ISC",
    "dependencies": {
        "@apollo/server": "^4.9.4",
        "@graphql-tools/schema": "^10.0.0",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "compression": "^1.7.4",
        "connect-typeorm": "^2.0.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "graphql": "^16.8.1",
        "graphql-passport": "^0.6.7",
        "graphql-subscriptions": "^2.0.0",
        "graphql-ws": "^5.14.1",
        "jsonwebtoken": "^9.0.2",
        "reflect-metadata": "^0.1.13",
        "winston": "^3.11.0",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "5.0.0",
        "@graphql-codegen/typescript": "4.0.1",
        "@graphql-codegen/typescript-resolvers": "4.0.1",
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.92",
        "@swc/helpers": "^0.5.3",
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.3",
        "@types/compression": "^1.7.3",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.19",
        "@types/express-session": "^1.17.8",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/node": "^20.8.4",
        "@types/passport": "^1.0.13",
        "@types/passport-local": "^1.0.36",
        "dotenv": "^16.3.1",
        "nodemon": "^3.0.1",
        "pg": "^8.11.3",
        "regenerator-runtime": "^0.14.0",
        "rimraf": "^5.0.5",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typeorm": "^0.3.17",
        "typescript": "^5.2.2"
    }
}
